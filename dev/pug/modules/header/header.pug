-var navLinks = [{link: '#swp', name: 'SimpleWine Privé'}, {link: '#gs', name: 'Green Selection'}, {link: '#gifts', name: 'Подарочный сертификат'}, {link: '#custom', name: 'Персонализация'}, {link: '#order', name: 'Как заказать'}]
-var headBtn = [{link: '/cart', name: 'Корзина', type: 'cart'}, {link: '/wishlist', name: 'Избранное', type: 'wish'}, {link: '/contacts', name: 'Контакты', type: 'contacts'}]

header.header
    .header__logo
        a(href="index.html" target="_selft").header__logo-link
            img(src="static/images/content/simple-logo.svg" alt="Simple Wine").header__logo-img
    nav.header__nav.nav
        ul.nav__list
            for i in navLinks
                li.nav__list-item
                    a(href="" +i.link target="_self").nav__list-link=i.name

        ul.nav__controls
            for i in headBtn
                li(class="nav__controls-item " +i.type)
                    a(href="" +i.link target="_self").nav__controls-link=i.name
