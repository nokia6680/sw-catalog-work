<!--Блок интро главной страницы-->
section.intro
    .intro__wrapper
        picture.intro__frame
            source(type="image/webp" media="(min-width: 1366px" srcset="static/images/content/intro-preview-desktop.webp")
            source(type="image/webp" media="(min-width: 720px" srcset="static/images/content/intro-preview-tablet.webp")
            source(type="image/webp" srcset="static/images/content/intro-preview-mobile.webp")
            source(media="(min-width: 1366px" srcset="static/images/content/intro-preview-desktop.jpg")
            source(media="(min-width: 720px)" srcset="static/images/content/intro-preview-tablet.jpg")
            img(itemprop="image" src="static/images/content/intro-preview-mobile.jpg").intro__frame-image
