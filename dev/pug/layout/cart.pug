include ../helpers/mixins
block variables

doctype html
html(lang="ru-RU")
    head
        meta(charset="utf-8")
        title #{title}
        <!--[if IE]>
        meta(http-equiv='X-UA-Compatible', content="IE = edge")
        <![endif]-->
        meta(name="viewport" content="width=device-width,initial-scale=1")
        meta(name="keywords" content="")
        link(rel="stylesheet" type='text/css' href="static/css/styles.css") 
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous")
        link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet")
    body
        include ../modules/header/header
        main.main.main--card
            +breadcrumb([["Главная ", "/index.html"], ["Корзина ", "#"]])
            
            section.cart
                .cart__wrapper
                    h1.cart__title Корзина
                    
                    .cart__body
                        ul.cart__list
                            li.cart__item
                                picture.cart__frame
                                    source(srcset="static/images/content/bottle-1.webp" type="image/webp")
                                    img(src="static/images/content/bottle-1.png" alt="name-of-wine").cart__frame-image
                                .cart__content
                                    .cart__info
                                        h2.cart__name Вино Johnson Estate Sauvignon Blanc
                                        p.cart__description Новая Зеландия, Белое, Сухое, 0.75 л
                                        
                                        .cart__controls
                                            button(type="button").cart__btn.cart__btn--delete
                                            button(type="button").cart__btn.cart__btn--wish
                                    .cart__bottom
                                        .cart__count
                                            button(type="button").cart__count-decrease -
                                            input(type="number" name="cart-quantity" id="cart-quantity" placeholder="0").cart__count-input
                                            button(type="button").cart__count-increase +
                                        b.cart__price 980 ₽
                            li.cart__item
                                picture.cart__frame
                                    source(srcset="static/images/content/bottle-1.webp" type="image/webp")
                                    img(src="static/images/content/bottle-1.png" alt="name-of-wine").cart__frame-image
                                .cart__content
                                    .cart__info
                                        h2.cart__name Вино Johnson Estate Sauvignon Blanc
                                        p.cart__description Новая Зеландия, Белое, Сухое, 0.75 л

                                        .cart__controls
                                            button(type="button").cart__btn.cart__btn--delete
                                            button(type="button").cart__btn.cart__btn--wish
                                    .cart__bottom
                                        .cart__count
                                            button(type="button").cart__count-decrease -
                                            input(type="number" name="cart-quantity" id="cart-quantity" placeholder="0").cart__count-input
                                            button(type="button").cart__count-increase +
                                        b.cart__price 980 ₽
                        .cart__checkout
                            .cart__summary
                                b.cart__summary-name Итого
                                span.cart__summary-overall 1666 ₽
                            button(type="submit").cart__submit Оформить заказ
            include ../modules/blocks/subscribe
            include ../modules/blocks/contacts
        include ../modules/footer/footer
        include ../modules/blocks/popup-reaction
        script(src="static/js/vendor/jquery-3.3.1.min.js")
        //script(src="static/js/vendor/libs.js")
        script(src="static/js/main.js")
        script(src="static/js/select.js")
        block script
